{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsMyService",
    "title": "My Service Schema",
    "type": "object",
    "properties": {
      "name": {
        "description": "The name of the game",
        "type": "string",
        "x-prompt": "Name of the game?"
      },
      "author": {
        "type": "string",
        "description": "The author of the new game",
        "x-prompt": "Your name/the package authors name?"
      },
      "description": {
        "type": "string",
        "description": "The description of the game",
        "x-prompt": "Game description?"
      },
      "trickTaking": {
        "type":"boolean",
        "description": "Whether to init a trick-taking card game",
        "x-prompt": "Trick-based game?",
        "default": true
      }
     },
    "required": [
      "name",
      "author",
      "description"
    ]
  }