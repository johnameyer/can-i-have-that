{
  "name": "@cards-ts/hearts",
  "version": "0.2.0",
  "description": "Implementation of the card game hearts.",
  "author": "John Meyer",
  "homepage": "https://github.com/johnameyer/can-i-have-that/tree/master/packages/hearts#readme",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "spec"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/johnameyer/can-i-have-that.git"
  },
  "bin": {
    "hearts": "./lib/start.js"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "postbuild": "find lib/ -name *.js -exec sed -i '1s|#!/usr/bin/env ts-node|#!/usr/bin/env node|' {} \\;",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "madge": "npx madge --circular --extensions ts ./src",
    "prestart": "npm run build",
    "start": "node lib/start.js start",
    "debug": "ts-node-dev --rs=false --inspect --transpileOnly src/start.ts start",
    "test": "exit && mocha -r ts-node/register spec/**/*.spec.ts",
    "prepublishOnly": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/johnameyer/can-i-have-that/issues"
  },
  "dependencies": {
    "@cards-ts/core": "^0.2.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@types/yargs": "^15.0.5"
  },
  "sideEffects": false,
  "gitHead": "04053409da080fb7d2a72de32a6392d3968f9442"
}
